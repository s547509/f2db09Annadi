block content 
  h1= title 
 
  - let icecreamid = toShow._id 
  - let icecreamName = toShow.icecreamName 
  - let icecreamF = toShow.icecreamF
  - let icecreamPrice = toShow.icecreamPrice
   
  div.row(class='mb-2') 
    div.mr-1 ID is 
    div #{icecreamid} 
  - let actionid = "/resource/icecreams/" + icecreamid 
  form(id='icecreamForm', action= actionid, method="PUT") 
    div.form-group 
        label.icecreamAttr(for='icecreamName') icecream icecreamName 
        input#icecreamName(type='text', name='icecreamName', value= icecreamName ) 
    div.form-group 
        label.icecreamAttr(for='icecreamF') icecream icecreamF
        input#icecreamF(type='text', name='icecreamF', value= icecreamF ) 
    div.form-group 
        label.icecreamAttr(for='icecreamPrice') icecream icecreamPrice 
        input#icecreamPrice(type='number', name='icecreamPrice', value= icecreamPrice) 
    input(type="submit") 
 
  script. 
